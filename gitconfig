[core]
	quotepath = false
	excludesfile = ~/.gitignore
	editor = vim
[alias]
	st = status -uno
	stu = status 
	cm = commit
	co = checkout
	br = branch
	mt = mergetool
	di = diff --no-ext-diff
	dic = diff --no-ext-diff --cached

[push]
	default = current
[merge]
	tool = extMerge
[mergetool "extMerge"]
	cmd = extMerge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
[mergetool]
	trustExitCode = false
[diff]
	external = extDiff
